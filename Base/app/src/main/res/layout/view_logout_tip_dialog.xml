<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chi_logout_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dip">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:src="@drawable/chi_mine_remind" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dip"
        android:gravity="center"
        android:text="@string/usercenter_logout_tip"
        android:textColor="#222222"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logout_tip_cancle"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_weight="1"
            android:background="@drawable/chi_logout_dialog_cancle_bg"
            android:gravity="center"
            android:text="@string/info_btn_cancle_string"
            android:textColor="#ff5a5f" />

        <View
            android:layout_width="23dip"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/logout_tip_commit"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_weight="1"
            android:background="@drawable/chi_logout_dialog_commit_bg"
            android:gravity="center"
            android:text="@string/info_btn_commit_string"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip" />
</LinearLayout>

